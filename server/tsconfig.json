{
  "compilerOptions": {
    "target": "ES6",                       // ECMAScript target version
    "module": "CommonJS",                   // CommonJS module system
    "outDir": "./dist",                     // Output directory for compiled JavaScript
    "rootDir": "./src",                     // Root directory of TypeScript source code
    "esModuleInterop": true,                // Enables compatibility for default imports
    "skipLibCheck": true,                   // Skip library type checking for faster builds
    "forceConsistentCasingInFileNames": true, // Ensures consistent casing in filenames
    "typeRoots": [
      "./@types",                        // Add the @types folder to typeRoots
      "./node_modules/@types",              // Include the default node_modules/@types directory
			"./custom.d.ts"
		]
  },
  "include": [
    "src/**/*.ts",                           // Include all TypeScript files in the src folder
		"./custom.d.ts"
	],
  "exclude": [
    "node_modules"                         // Exclude node_modules
  ]
}

